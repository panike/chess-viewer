def draw_border =
	draw (0,1)--(chess_w,1)--(chess_w,chess_h)--(0,chess_h)--cycle withpen
		pencircle scaled 1pt; enddef;

def fill_black_square=
	fill (0,0)--(chess_w,0)--(chess_w,chess_h)--(0,chess_h)--cycle
	withcolor (0.7,0.7,0.7); enddef;

